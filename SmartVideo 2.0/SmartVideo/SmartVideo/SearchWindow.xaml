<Window x:Class="SmartVideo.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartVideo"
        mc:Ignorable="d"
        Title="SearchWindow" Height="147.185" Width="308.847" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>

        <StackPanel Orientation="Vertical" Grid.ColumnSpan="2" >
            <ComboBox x:Name="typeRecherche" Height="23" VerticalAlignment="Top" Margin="10" SelectionChanged="ComboBox_SelectionChanged" >
                <ComboBoxItem Content="Film"/>
                <ComboBoxItem Content="Acteur"/>
                <ComboBoxItem Content="Réalisateur"/>
                <ComboBoxItem Content="Genre"/>
            </ComboBox><TextBox x:Name="textRecherche" Margin="10,0,10,10" />
            <Button x:Name="searchBtn" Content="Rechercher" Margin="104,0" Click="searchBtn_Click" />
        </StackPanel>


    </Grid>
</Window>
