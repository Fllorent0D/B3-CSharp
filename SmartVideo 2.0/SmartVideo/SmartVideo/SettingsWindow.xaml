<Window x:Class="SmartVideo.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartVideo"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="259.794" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">

    <StackPanel Grid.ColumnSpan="2">
        <Label x:Name="label" Content="Hote de la base de données" Margin="10,10,10,0"/>
        <TextBox x:Name="hostTB" Height="23" TextWrapping="Wrap" Margin="10,0"/>
        <Label x:Name="label_Copy" Content="Nom de l'instance" Margin="10,10,10,0"/>
        <TextBox x:Name="instanceTB" Height="23" TextWrapping="Wrap" Margin="10,0"/>
        <Label x:Name="label_Copy1" Content="Nom de la base de données" Margin="10,10,10,0"/>
        <TextBox x:Name="nameTB" Height="23" TextWrapping="Wrap" Margin="10,0"/>
        <Button x:Name="button" Content="Sauvegarder" Margin="0,15,10,0" Width="99" HorizontalContentAlignment="Center" HorizontalAlignment="Right" IsManipulationEnabled="True" Click="button_Click"/>
    </StackPanel>
</Window>
